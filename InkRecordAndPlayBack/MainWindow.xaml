        Title="MainWindow" Height="1235" Width="554" SizeToContent="WidthAndHeight">
    <Window.Resources>
     
     
        <Style x:Key="{x:Type InkCanvas}" TargetType="InkCanvas">
            <Setter Property="Width" Value="100"></Setter>
            <Setter Property="Height" Value="100"></Setter>
